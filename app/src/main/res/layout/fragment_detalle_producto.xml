<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleProductoFragment"
    android:background="@color/main_user_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back_button"
            android:layout_marginTop="4dp"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_left_arrow" />

        <ImageView
            android:layout_marginStart="292dp"
            android:layout_marginTop="8dp"
            android:id="@+id/img_cart"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_cart" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/name_product"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="@string/price_product"
            android:textColor="@color/orange_color"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/white_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_button_add"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_add" />

            <TextView
                android:id="@+id/txt_cant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/product_cant"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_button_minus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_minus" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/description_product"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="18sp"
            android:layout_margin="28dp"/>

        <Button
            android:id="@+id/btn_add_cart"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_margin="18dp"
            android:layout_height="80dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/orange_color"
            android:text="@string/button_add_cart"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>


</FrameLayout>