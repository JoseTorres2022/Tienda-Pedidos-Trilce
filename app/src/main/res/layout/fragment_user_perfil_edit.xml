<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_perfil_edit"
    android:background="@color/main_user_background">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="77dp"
        android:text="Telefono:"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="69dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="194dp"
        android:layout_height="190dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/user"
        android:background="@drawable/circular_button_edit_image"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="108dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/circular_button_edit_image"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/button_image_edit"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="184dp" />

    <Button
        android:id="@+id/btnUpdatePerfil"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/black"
        android:text="Confirmar Cambios"
        android:textAllCaps="false"
        android:layout_marginTop="290dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="589dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Nombres:"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="77dp"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="258dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:inputType="text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp"
        android:background="@drawable/inputs"
        />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="phone"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="65dp"
        android:background="@drawable/inputs"/>

    <TextView
        android:id="@+id/txtContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="140sp"
        android:layout_marginLeft="77dp"
        android:text="Contraseña:"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="69dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="259dp"
        android:layout_height="52dp"
        android:layout_marginTop="180dp"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textPassword"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="69dp"
        android:background="@drawable/inputs"
        />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="start|top"
        android:background="@color/main_user_background"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_back" />

</FrameLayout>